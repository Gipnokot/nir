<div class="table-responsive">
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th colspan="3">ФИО</th>
        <th scope="col">Название НИР</th>
        <th scope="col">Дата публикации</th>
        <th scope="col">DOI</th>
        <th scope="col">Ссылка на публикацию</th>
        <th scope="col">Публикация</th>
      </tr>
    </thead>     
    <tbody>
      <% @teachers_publications.each do |row| %>
        <tr>
          <td colspan="3"><%= "#{row.lastname}<br> #{row.name}<br> #{row.fathername}".html_safe %></td>
          <td><%= row.title %></td>
          <td><%= row.dtr %></td>
          <td><%= row.doi %></td>
          <td style="word-wrap: break-word; max-width: 200px;"><%= link_to row.href, row.href, class: "wrap-link" %></td>
          <td><%= row.output %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Скачать CSV', teacher_path(format: 'csv'), class: "btn btn-primary" %>
