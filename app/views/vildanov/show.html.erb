<div class="table-responsive">
<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="3">ФИО</th>
            <th scope="col">Название НИР</th>
            <th scope="col">Дата публикации</th>
            <th scope="col">DOI</th>
            <th scope="col">Ссылка на публикацию</th>
            <th scope="col">Публикация</th>
        </tr>
    </thead>     
    <tbody>
        
        <% @teachers_publications.each do |row| %>
            <tr>
            <td colspan="3"><%= "#{row.lastname}<br> #{row.name}<br> #{row.fathername}".html_safe %></td>
            <td><%= row.title %></td>
            <td><%= row.dtr %></td>
            <td><%= row.doi %></td>
            <td><a href="<%= row.href %>" class="wrap-link"><%= row.href %></a></td>
            <td><%= row.output %></td>
            </tr>
            <% end %>
    </tbody>
</table>