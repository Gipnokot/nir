<!-- app/views/nirs/edit.html.erb -->
<div class="container">
  <h1>Редактировать НИР</h1>
  <%= form_for(@nir) do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Название НИР' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :dtr, 'Дата' %>
      <%= f.date_field :dtr, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :nirtype, 'Тип' %>
      <%= f.text_field :nirtype, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :volume, 'Объем' %>
      <%= f.number_field :volume, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :doi, 'DOI' %>
      <%= f.text_field :doi, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :href, 'Ссылка' %>
      <%= f.text_field :href, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :output, 'Выходные данные' %>
      <%= f.text_area :output, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
